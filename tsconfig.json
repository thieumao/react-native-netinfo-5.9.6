{
  "include": ["src/**/*.ts", "example/**/*.ts", "example/**/*.tsx"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
